{{#partial "content"}}
    {{#if editDepartment}}
        <h1>Edit this department!</h1>
        <form action="/departments/{{departments.id}}" method="post">
            <label for="name">Edit this department's's name</label>
            <input id="newDepartmentName" name="newDepartmentName" type="text" value="{{department.name}}">
            <button type="submit" class="btn btn-default">Submit!</button>
        </form>
    {{else}}
        <h1>Add a new Department!</h1>
        <form action="/departments" method="post">
            <label for="name">Department Name</label>
            <input id="name" name="name" type="text">
            <button type="submit" class="btn btn-default">Submit!</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}