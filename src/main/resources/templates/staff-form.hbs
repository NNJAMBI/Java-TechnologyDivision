{{#partial "content"}}

    {{#if editStaff}}
        <h1>Edit Staff</h1>
        <form action="/staff/{{task.id}}" method="post">
            <br>
            <label for="description">Edit this Staff's description</label>
            <input id="description" name="description" type="text" value="{{staff.description}}">
            <br>
            <label for="departmentId">Update this Staff's department:</label>
            <select id="departmentId" name="departmentId">
                {{#each departments}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right department?<a href="/departments/new">Add a new one first</a> </p>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    {{else}}
        <h2>Add a new Staff!</h2>
        <form action="/staffs/" method="post">
            {{#if departments}}
                <label for="description">Staff Description</label>
                <input id="description" name="description" type="text">
                <label for="departmentId">Categorize this staff as:</label>
                <select id="departmentId" name="departmentId">
                    {{#each departments}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right Department?<a href="/departments/new">Add a new one first</a> </p>
            {{else}}
                <h3>You will need to add a department before you add a staff. <a href="/departments">Add one here</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}