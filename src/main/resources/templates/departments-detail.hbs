{{#partial "content"}}
    <h1>{{department.name}}</h1>
    <p>List of all staff in this Department</p>
    <ul>
        {{#each staff}}
            <li><p><a href="/departments/{{department.id}}/staff/{{id}}">{{description}} </a> </p></li>
        {{/each}}
    </ul>
    <a href="/departments/{{department.id}}/edit">Edit this department</a><br>
    <a href="/departments/{{department.id}}/delete">Delete this department</a>
